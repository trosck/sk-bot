{
  "include": [
    "src",
    "generated"
  ],
  // Visit https://aka.ms/tsconfig to read more about this file
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "./dist",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "target": "es2022",
