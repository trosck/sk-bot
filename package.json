{
  "name": "sk-bot",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "engines": {
    "node": ">=18.x"
  },
  "scripts": {
    "build": "tsc",
    "build:clean": "rm -rf dist && npm run build",
    "start": "node dist/src/main.js",
    "bot": "nodemon --watch src --ext ts --exec \"tsx src/bot.ts\" | pino-pretty",
    "api": "nodemon --watch src --ext ts --exec \"tsx src/api.ts\" | pino-pretty",
    "prisma:format": "prisma format --schema ./prisma/schema.prisma",
    "prisma:generate": "prisma generate --schema prisma/schema.prisma",
    "migrate:dev": "prisma migrate dev --schema ./prisma/schema.prisma",
    "migrate:deploy": "prisma migrate deploy --schema ./prisma/schema.prisma"
  },
  "dependencies": {
    "@cacheable/node-cache": "^1.7.1",
    "@prisma/adapter-pg": "^7.0.1",
    "@prisma/client": "^7.0.1",
    "cors": "^2.8.5",
    "discord-interactions": "^4.0.0",
    "discord.js": "^14.22.1",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "multer": "^2.0.2",
    "openai": "^6.9.1",
    "pg": "^8.16.3",
    "pino": "^9.9.5",
    "pino-http": "^11.0.0",
    "xlsx": "^0.18.5",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.10.1",
    "@types/pg": "^8.15.6",
    "@types/pino": "^7.0.4",
    "nodemon": "^3.0.0",
    "pino-pretty": "^13.1.1",
    "prisma": "^7.0.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  }
}
